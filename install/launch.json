    "version": "0.2.0",
    "configurations": [
        {
            "name": "Run frontend",
            "command": "npm run start",
            "request": "launch",
            "type": "node-terminal"
        },
        {
            "name": "Run backend",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}\\backend\\manage.py",
            "args": [
                "runserver"
            ],
            "django": true,
            "justMyCode": true
